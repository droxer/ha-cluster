Vagrant.configure("2") do |config|

  config.vm.define "srv01" do |srv01|
    srv01.vm.hostname = 'srv01'
    srv01.vm.box = "debian-jessie"
    srv01.vm.network "private_network", ip: "192.168.50.11"
    srv01.vm.network "private_network", type: "dhcp"
  end
      
  config.vm.define "srv02" do |srv02|
    srv02.vm.hostname = 'srv02'
    srv02.vm.box = "debian-jessie"  
    srv02.vm.network "private_network", ip: "192.168.50.12"  
    srv02.vm.network "private_network", type: "dhcp"
  end

  config.vm.define "srv03" do |srv03|
    srv03.vm.hostname = 'srv03'
    srv03.vm.box = "debian-jessie"  
    srv03.vm.network "private_network", ip: "192.168.50.13"  
  end

end
